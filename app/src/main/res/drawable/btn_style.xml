<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_wine_dark"
                android:endColor="@color/primary_wine_darker"
                android:angle="135" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="@color/accent_gold" />
        </shape>
    </item>
    
    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#4D4D4D" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="@color/text_secondary" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary_wine"
                android:endColor="@color/secondary_brown"
                android:angle="135" />
            <corners android:radius="25dp" />
            <stroke
                android:width="2dp"
                android:color="@color/text_primary" />
        </shape>
    </item>
</selector>