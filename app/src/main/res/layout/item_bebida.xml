<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/background_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen grande del platillo -->
        <ImageView
            android:id="@+id/imgBebida"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- Overlay degradado -->
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_overlay"
            android:layout_alignBottom="@id/imgBebida"/>

        <!-- Nombre del platillo -->
        <TextView
            android:id="@+id/tvNombreBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pollo a la Brasa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:shadowColor="@color/background_dark"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_alignBottom="@id/imgBebida"
            android:layout_margin="16dp" />

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPrecioBebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 25.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/accent_gold"
            android:background="@drawable/bg_price"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:elevation="2dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

