<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutPostres"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PostresActivity">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_restobarx">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPostres"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#8B0000"
            android:title="Postres"
            android:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTituloPostres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Postres ðŸ°"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/toolbarPostres"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp"/>

        <EditText
            android:id="@+id/etBuscarPostre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Buscar postre..."
            android:textColorHint="#CCCCCC"
            android:textColor="@android:color/white"
            android:background="@android:drawable/edit_text"
            android:backgroundTint="@android:color/white"
            android:padding="10dp"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloPostres"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layoutFiltrosPostres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/etBuscarPostre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Spinner
                android:id="@+id/spPrecioPostre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="@android:color/white"
                android:minHeight="48dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPostres"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutFiltrosPostres"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MenÃº lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewPostres"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
