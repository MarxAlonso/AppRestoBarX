<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="12dp"
app:cardCornerRadius="18dp"
app:cardElevation="10dp"
app:cardBackgroundColor="@android:color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Imagen grande del platillo -->
    <ImageView
        android:id="@+id/imgPlatillo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- Overlay degradado -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/gradient_overlay"
        android:layout_alignBottom="@id/imgPlatillo"/>

    <!-- Nombre del platillo -->
    <TextView
        android:id="@+id/tvNombrePlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pollo a la Brasa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@id/imgPlatillo"
        android:layout_margin="16dp" />

    <!-- Precio -->
    <TextView
        android:id="@+id/tvPrecioPlatillo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S/ 25.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:background="@drawable/bg_price"
        android:padding="6dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />

</RelativeLayout>
</androidx.cardview.widget.CardView>

